AC_INIT(libgnomecanvas)

AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(libgnomecanvas-2, 1.96.0)

AM_MAINTAINER_MODE

if test -z "$CERTIFIED_GNOMIE"; then
  cat $srcdir/message-of-doom
  exit 1
fi

GNOME_COMMON_INIT
GNOME_PLATFORM_GNOME_2(yes, force)

if test -e .using-gnome-libs-package ; then
  USING_GNOME_LIBS_PACKAGE=true
else
  USING_GNOME_LIBS_PACKAGE=false
fi
AM_CONDITIONAL(USING_GNOME_LIBS_PACKAGE, test x$USING_GNOME_LIBS_PACKAGE = xtrue)

AC_ISC_POSIX
AC_PROG_CC
AC_STDC_HEADERS
AC_ARG_PROGRAM
AM_PROG_LIBTOOL
AM_PROG_LEX
AC_PROG_YACC
AC_PATH_PROGS(PATH_TO_XRDB, "xrdb")

GNOME_COMPILE_WARNINGS

dnl utility conditional
AM_CONDITIONAL(FALSE, test "x" = "y")

ALL_LINGUAS=""
AM_GNOME2_GETTEXT

AC_SUBST(CFLAGS)
AC_SUBST(CPPFLAGS)
AC_SUBST(LDFLAGS)

GNOME_COMPILE_WARNINGS(maximum)

# define a MAINT-like variable REBUILD which is set if Perl
# and awk are found, so autogenerated sources can be rebuilt

AC_PROG_AWK
AC_CHECK_PROGS(PERL, perl5 perl)

# We would like indent, but don't require it.
AC_CHECK_PROG(INDENT, indent, indent)

_found_perl=0
if test -n "$PERL" && $PERL -v | grep 'version 5.' > /dev/null ; then
  _found_perl=1
else
  # The version string for perl changed for 'version 5' to 'v5' in
  # perl 5.6 or therabouts
  if test -n "$PERL" && $PERL -v | grep 'v5.' > /dev/null ; then
    _found_perl=1
  fi
fi

REBUILD=\#
if test $_found_perl -eq 1; then
  if test -n "$AWK" ; then 
    REBUILD=
  fi
fi
AC_SUBST(REBUILD)

dnl Utility conditional
AM_CONDITIONAL(FALSE, test x = y)

dnl
dnl Start of pkg-config checks
dnl
if test x$USING_GNOME_LIBS_PACKAGE = xtrue; then
  GNOME_PKGCONFIG_CHECK_MODULES(GNOMELIBSPACKAGE, gnome-common-2.0 gobject-2.0 ORBit-2.0 oaf-2.0 gconfgtk-2.0 libxml-2.0)
  GNOMELIBSPACKAGE_CFLAGS="-I\$(top_srcdir)/../libgnome-2 $GNOMELIBSPACKAGE_CFLAGS"
else
  GNOME_PKGCONFIG_CHECK_MODULES(LIBGNOME, libgnome-2.0:1.96.0)
fi
AC_SUBST(GNOMELIBSPACKAGE_CFLAGS)
AC_SUBST(GNOMELIBSPACKAGE_LIBS)
AC_SUBST(LIBGNOME_CFLAGS)
AC_SUBST(LIBGNOME_LIBS)

dnl
dnl GTK+ check
dnl
GNOME_PKGCONFIG_CHECK_MODULES(GTK, gtk+-2.0:1.3.2)
AC_SUBST(GTK_CFLAGS)
AC_SUBST(GTK_LIBS)

dnl
dnl Libart check
dnl
GNOME_PKGCONFIG_CHECK_MODULES(LIBART, libart-2.0:2.1.0)
AC_SUBST(LIBART_CFLAGS)
AC_SUBST(LIBART_LIBS)

dnl
dnl Pango check
dnl
GNOME_PKGCONFIG_CHECK_MODULES(PANGO, pango:0.13 pangoft2:0.13)
AC_SUBST(PANGO_CFLAGS)
AC_SUBST(PANGO_LIBS)

dnl This is installed from GTK+ 2.0's gdk-pixbuf
AC_PATH_PROG(MAKE_INLINE_PIXBUF, make-inline-pixbuf)
test -z "$MAKE_INLINE_PIXBUF" && AC_MSG_ERROR([
*** You need the make-inline-pixbuf tool which is installed
*** from GTK+ 2.0's gdk-pixbuf.
***
*** Either the location where you installed your GTK+ 2.0 is
*** not in your PATH or something is screwed up with your
*** GTK+ 2.0 installation
])

AC_OUTPUT([
Makefile
po/Makefile.in
intl/Makefile
libgnomecanvas/Makefile
libgnomecanvas/libgnomecanvas-2.0.pc
])

cat $srcdir/message-of-doom
